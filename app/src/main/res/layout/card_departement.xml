<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="210dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/rounded_card_view"
    android:adjustViewBounds="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/CardView_card_university_holder_image"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_view_background"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/cardView_department_thumbnail_department"
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_card_department"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/textView_title_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:fontFamily="@font/pt_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CardView_card_university_holder_image" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
