<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateProfileActivity">


    <ProgressBar
        android:id="@+id/progressBar_update_profile"
        android:layout_width="0dp"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/green"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_update_profile"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:background="@drawable/rounded_card_view"
        app:cardCornerRadius="@dimen/card_movie_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout_cardView_update_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleImageView_update_profile_ambassador"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                android:layout_margin="20dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/EditText_update_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:hint="Robi Hidayat"
                app:layout_constraintEnd_toEndOf="@+id/CircleImageView_update_profile_ambassador"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="@+id/CircleImageView_update_profile_ambassador"
                app:layout_constraintTop_toBottomOf="@+id/CircleImageView_update_profile_ambassador" />
            <EditText
                android:id="@+id/EditText_update_profile_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:hint="SMA Negeri 2 Cirebon"
                app:layout_constraintEnd_toEndOf="@+id/EditText_update_profile_name"
                app:layout_constraintStart_toStartOf="@+id/EditText_update_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/EditText_update_profile_name" />
            <EditText
                android:id="@+id/EditText_update_profile_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:hint="IPA"
                app:layout_constraintEnd_toEndOf="@+id/EditText_update_profile_school"
                app:layout_constraintStart_toStartOf="@+id/EditText_update_profile_school"
                app:layout_constraintTop_toBottomOf="@+id/EditText_update_profile_school" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FloatingActionButton_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="76dp"
                android:elevation="6dp"
                app:borderWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/CircleImageView_update_profile_ambassador"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedTranslationZ="12dp"
                app:srcCompat="@drawable/ic_save_black_24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:background="@drawable/rounded_card_view"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_movie_radius"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_update_profile">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView_update_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="378dp"
                android:src="@drawable/ic_contact_mail_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/EditText_update_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="13sp"
                android:hint="robihidayat122@gmail.com"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_update_profile_email"
                app:layout_constraintStart_toEndOf="@+id/imageView_update_profile_email"
                app:layout_constraintTop_toTopOf="@+id/imageView_update_profile_email" />

            <ImageView
                android:id="@+id/imageView_update_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_contact_phone_black"
                app:layout_constraintEnd_toEndOf="@+id/imageView_update_profile_email"
                app:layout_constraintStart_toStartOf="@+id/imageView_update_profile_email"
                app:layout_constraintTop_toBottomOf="@+id/imageView_update_profile_email" />

            <EditText
                android:id="@+id/EditText_update_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="082227395894"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_update_profile_phone"
                app:layout_constraintStart_toEndOf="@+id/imageView_update_profile_phone"
                app:layout_constraintTop_toTopOf="@+id/imageView_update_profile_phone" />

            <ImageView
                android:id="@+id/ImageView_update_profile_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bubble_interest"
                app:layout_constraintEnd_toEndOf="@+id/imageView_update_profile_phone"
                app:layout_constraintStart_toStartOf="@+id/imageView_update_profile_phone"
                app:layout_constraintTop_toBottomOf="@+id/imageView_update_profile_phone" />

            <EditText
                android:id="@+id/EditText_update_profile_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="13sp"
                android:hint="Jurusan Ilmu Alam Goib"
                app:layout_constraintBottom_toBottomOf="@+id/ImageView_update_profile_interest"
                app:layout_constraintStart_toEndOf="@+id/ImageView_update_profile_interest"
                app:layout_constraintTop_toTopOf="@+id/ImageView_update_profile_interest" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>