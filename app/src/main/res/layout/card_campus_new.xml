<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/CardView_card_campus_news_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="240dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_gravity="center_horizontal"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/rounded_card_view">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_card_campus_news_logo_image"
        android:layout_width="135dp"
        android:layout_marginRight="16dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#0B7CBB"
        card_view:cardCornerRadius="17dp"
        android:layout_gravity="right">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ImageView_campus_news_thumbnail_department"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_card_department"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView_card_campus_news_holder_image"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ConstraintLayout_campus_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/TextView_campus_news_university"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/pt_sans"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="Universitas"
                    android:textColor="#000000"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TextView_campus_news_title"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pt_sans"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="title"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TextView_campus_news_university" />

                <TextView
                    android:id="@+id/TextView_campus_news_description"
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pt_sans"
                    android:maxLines="5"
                    android:textColor="#000000"
                    android:text="lorem la lorem"
                    android:textAlignment="inherit"
                    app:layout_constraintStart_toStartOf="@+id/TextView_campus_news_title"
                    app:layout_constraintTop_toBottomOf="@+id/TextView_campus_news_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
