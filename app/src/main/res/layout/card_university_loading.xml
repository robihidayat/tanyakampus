<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_Card_University"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView_card_university_holder_image"
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_view_background"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ImageView_card_university_thumbnail"
                android:layout_width="150dp"
                android:layout_height="@dimen/movie_cover_height"
                android:layout_gravity="center"
                android:background="@drawable/rounded_card_view"
                android:scaleType="fitXY"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TextView_card_university_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConstraintLayout_Card_University"
            android:fontFamily="@font/pt_sans"
            android:paddingLeft="@dimen/movie_title_padding"
            android:text="title"
            android:textStyle="bold"
            android:paddingTop="@dimen/movie_title_padding"
            android:paddingRight="@dimen/movie_title_padding"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/movie_title"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/CardView_card_university_holder_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>