<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.LandingPage">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_landing_page_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout_landing_page_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="27dp">

        <ImageView
            android:layout_width="209dp"
            android:layout_height="187dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/text_view_landing_page_kampus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.436" />

        <ImageView
            android:id="@+id/text_view_landing_page_kampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="200dp"
            android:src="@drawable/tanya_kampus_warna"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_landing_page_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12">

        <Button
            android:id="@+id/button_landing_page_login"
            android:layout_width="175dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button_login"
            android:text="@string/landing_page_login"
            android:foreground="?android:attr/selectableItemBackground"
            android:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/button_landing_page_register"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="175dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button_register"
            android:text="@string/landing_page_register"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-black"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/button_landing_page_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_landing_page_login"
            tools:ignore="MissingConstraints"></Button>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>